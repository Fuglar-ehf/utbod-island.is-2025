// vi: ft=jsonc
{
  "build": { "dockerfile": "Dockerfile", "context": "../" },
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint"]
    }
  },
  "privileged": true,
  "runArgs": ["--name=devcontainer-islandis"],
  "postCreateCommand": "cp .devcontainer/aws-config.default.ini .devcontainer/aws-config.ini",
  "containerEnv": {
    "AWS_CONFIG_FILE": "${workspaceFolder}/.devcontainer/aws-aws-config.ini"
  },

  "forwardPorts": [3000, 3333, 4200, 4242]
}
