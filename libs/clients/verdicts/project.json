{
  "name": "clients-verdicts",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/clients/verdicts/src",
  "projectType": "library",
  "tags": ["lib:nest", "scope:nest"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/clients/verdicts/jest.config.ts"
      }
    },
    "update-openapi-document": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "curl https://foris.gopro.net/domssm/services/swagger/docs/v1 > src/clientConfig.json",
          "prettier --write src/clientConfig.json"
        ],
        "parallel": false,
        "cwd": "libs/clients/verdicts"
      }
    },
    "codegen/backend-client": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn openapi-generator -o libs/clients/verdicts/gen/fetch -i libs/clients/verdicts/src/clientConfig.json --skip-validate-spec"
      },
      "outputs": ["{projectRoot}/gen/fetch"]
    }
  }
}
