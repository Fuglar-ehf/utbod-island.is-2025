{
  "openapi": "3.0.1",
  "info": {
    "title": "Vefþjónustur fyrir veiðileyfi",
    "description": "Skjölun á núvernadi veiðileyfi vefþjónustun Fiskistofu.",
    "contact": {
      "name": "Ólafur Pálmi Guðnason",
      "email": "olafur.palmi.gudnason@fiskistofa.is"
    },
    "version": "1.0"
  },
  "paths": {
    "/v1/skip/{skipaskrarnumer}/veidileyfi": {
      "get": {
        "tags": ["Skip"],
        "summary": "Sækir lista af veiðileyfum skips sem skip þarf ekki annað veiðileyfi til að sækja um.",
        "parameters": [
          {
            "name": "skipaskrarnumer",
            "in": "path",
            "description": "Skipaskrárnúmer",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/VeidileyfiListi"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VeidileyfiListi"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/VeidileyfiListi"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/v1/umsoknir/{umsoknid}": {
      "get": {
        "tags": ["Umsoknir"],
        "summary": "Sækir veiðileyfi umsókn.",
        "parameters": [
          {
            "name": "umsoknid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Umsokn"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Umsokn"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Umsokn"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/v1/umsoknir": {
      "post": {
        "tags": ["Umsoknir"],
        "summary": "Býr til veiðileyfi umsókn.",
        "requestBody": {
          "description": "Veiðileyfi umsókn",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Umsokn"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Umsokn"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Umsokn"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/UmsoknResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UmsoknResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/UmsoknResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
