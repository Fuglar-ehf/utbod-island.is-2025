{
  "name": "clients-directorate-of-immigration",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/clients/directorate-of-immigration/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/clients/directorate-of-immigration/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/clients/directorate-of-immigration/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "update-openapi-document": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "curl -H \"X-Road-Client: $XROAD_CLIENT_ID\" http://localhost:8081/r1/IS-DEV/GOV/10011/UTL-Protected/getOpenAPI?serviceCode=Utl-Umsokn-v1 -H 'Accept: application/json' > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/Applicant/NewItems\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/Application/NewItems\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/ApplicationAttachment/NewItems/{applicationId}\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/CountryOfResidence/NewItems\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/CriminalRecord/NewItems\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/Employer/NewItems/{applicationId}\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/ResidenceAbroad/NewItems/{applicationId}\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/Study/NewItems\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.paths.\"/api/TravelDocument/NewItems/{applicationId}\".post.requestBody.required = true' src/clientConfig.json) > src/clientConfig.json",
          "cat <<< $(jq '.components.schemas.ProblemDetails.additionalProperties = false' src/clientConfig.json) > src/clientConfig.json"
        ],
        "parallel": false,
        "cwd": "libs/clients/directorate-of-immigration"
      }
    },
    "schemas/external-openapi-generator": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn openapi-generator -o libs/clients/directorate-of-immigration/gen/fetch -i libs/clients/directorate-of-immigration/src/clientConfig.json"
        ]
      }
    }
  },
  "tags": ["lib:client", "scope:client"]
}
