{
  "name": "service-portal-assets",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/service-portal/assets/src",
  "projectType": "library",
  "generators": {},
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/service-portal/assets/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/service-portal/assets/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/coverage/libs/service-portal/assets"]
    },
    "extract-strings": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn ts-node -P libs/localization/tsconfig.lib.json libs/localization/scripts/extract 'libs/service-portal/assets/src/{lib,components,screens}/**/*.{js,ts,tsx}'"
      }
    },
    "schemas/codegen": {
      "executor": "nx:run-commands",
      "options": {
        "output": "libs/service-portal/assets/src/**/*.generated.ts",
        "command": "graphql-codegen --config libs/service-portal/assets/codegen.yml"
      }
    }
  },
  "tags": ["lib:portals-mypages", "scope:portals-mypages"]
}
