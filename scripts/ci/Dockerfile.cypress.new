FROM cypress/included:10.2.0


ARG APP
ARG APP_HOME
ARG APP_DIST_HOME

ENV APP=${APP}
ENV APP_HOME=${APP_HOME}
ENV APP_DIST_HOME=${APP_DIST_HOME}

ENV TEST_ENVIRONMENT=dev
ENV CYPRESS_VIDEOS_FOLDER=/out/videos
ENV CYPRESS_SCREENSHOTS_FOLDER=/out/screenshots
ENV CYPRESS_DOWNLOADS_FOLDER=/out/downloads

RUN touch cachebust07
COPY ${APP_HOME}/ /app/${APP}
COPY ${APP_DIST_HOME}/ /${APP_DIST_HOME}
RUN ls -al /app /app/${APP} /${APP_DIST_HOME}
