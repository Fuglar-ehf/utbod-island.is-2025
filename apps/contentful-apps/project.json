{
  "name": "contentful-apps",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/contentful-apps",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn nx build-next contentful-apps",
          "yarn nx build-server contentful-apps"
        ]
      },
      "configurations": {
        "production": {
          "args": "--prod"
        }
      },
      "outputs": ["{workspaceRoot}/dist/apps/contentful-apps"]
    },
    "build-next": {
      "executor": "@nx/next:build",
      "options": {
        "outputPath": "dist/apps/contentful-apps"
      },
      "configurations": {
        "production": {}
      },
      "outputs": ["{options.outputPath}"]
    },
    "build-server": {
      "executor": "@nx/webpack:webpack",
      "options": {
        "outputPath": "dist/apps/contentful-apps",
        "main": "apps/contentful-apps/server.ts",
        "tsConfig": "apps/contentful-apps/tsconfig.json",
        "maxWorkers": 2,
        "assets": [],
        "compiler": "tsc",
        "target": "node"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      },
      "outputs": ["{options.outputPath}"]
    },
    "serve": {
      "executor": "@nx/node:node",
      "options": {
        "buildTarget": "contentful-apps:build-server"
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "contentful-apps:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/contentful-apps"],
      "options": {
        "jestConfig": "apps/contentful-apps/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/contentful-apps/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker-next": {}
  },
  "tags": ["scope:react-next"]
}
