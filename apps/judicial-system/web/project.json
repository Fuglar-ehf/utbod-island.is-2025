{
  "name": "judicial-system-web",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/judicial-system/web",
  "projectType": "application",
  "generators": {},
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "outputPath": "dist/apps/judicial-system/web",
        "commands": [
          "yarn nx build-next judicial-system-web",
          "yarn nx build-server judicial-system-web"
        ]
      },
      "configurations": {
        "production": {
          "args": "--prod"
        }
      }
    },
    "build-next": {
      "executor": "@nx/next:build",
      "options": {
        "outputPath": "dist/apps/judicial-system/web"
      },
      "configurations": {
        "production": {}
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "build-server": {
      "executor": "@nx/webpack:webpack",
      "options": {
        "outputPath": "dist/apps/judicial-system/web",
        "main": "apps/judicial-system/web/server.ts",
        "tsConfig": "apps/judicial-system/web/tsconfig.json",
        "maxWorkers": 2,
        "assets": [],
        "compiler": "tsc",
        "target": "node"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "serve": {
      "executor": "@nx/node:node",
      "options": {
        "buildTarget": "judicial-system-web:build-server"
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "judicial-system-web:build:production"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/judicial-system/web/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/judicial-system/web/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": [
        "{workspaceRoot}/coverage/apps/judicial-system/web"
      ]
    },
    "docker-next": {},
    "extract-strings": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn ts-node -P libs/localization/tsconfig.lib.json libs/localization/scripts/extract 'apps/judicial-system/web/{messages/**/*,**/*.strings}.{js,ts,tsx}'"
      }
    }
  },
  "tags": [
    "scope:judicial-system-web"
  ]
}
